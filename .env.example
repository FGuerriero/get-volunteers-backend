# This file is an example. Copy it to .env and fill in your actual credentials.
# NEVER commit your .env file to version control!

# Database connection string
# Format: mysql+mysqlconnector://user:password@host:port/database_name
DATABASE_URL="mysql+mysqlconnector://your_username:your_strong_password@localhost:3306/getVolunteers"

# A secret key for security purposes (e.g., for JWT tokens, session management)
# Generate a strong, random string for this (e.g., using Python's secrets module)
# import secrets; print(secrets.token_hex(32))
SECRET_KEY="your_super_secret_key_here_change_this_in_production"

# Google Gemini API Key
# This is used by the MatchingService for AI-powered volunteer matching.
# In the Canvas environment, this will be automatically injected.
# For local development, you would typically get this from Google Cloud.
GOOGLE_API_KEY=""

# Optional: Set environment for development or production
APP_ENV="development"

# Optional: JWT Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# Optional: Gemini Model Name (e.g., gemini-2.0-flash, gemini-2.5-flash)
GEMINI_MODEL_NAME="gemini-2.0-flash"